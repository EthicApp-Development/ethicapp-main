    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/introjs.css">
    <link rel="stylesheet" href="css/main.css"/>
</head>
<body>

<div ng-controller="SesListController">


    <div class="top-bar-mini cflex">
        <div class="cf1">
            <a href="seslist" class="simple-margin-left">
                <img src="img/logo.png" class="logo-bar">
            </a>
        </div>
        <div class="cf3 grow text-center">
            <div>
                <input type="text" class="form-control form-inline-med flat" ng-model="invCode" id="codebox"
                       ng-keydown="$event.keyCode === 13 && enterCode()" placeholder="Ingresar CÃ³digo">
                <span>
                    <button class="btn btn-default flat btn-padding-min" ng-disabled="invCode == ''" ng-click="enterCode()"
                        id="codeboxbtn">
                        <i class="fa fa-external-link-square fa-2x"></i>
                    </button>
                </span>
            </div>
        </div>
        <div class="cf1 text-right margin-right-8 simple-padding-top" id="topbtnlist">
            <a href="#" class="text-white margin-right-8" ng-click="startTour()">
                <i class="fa fa-question-circle fa-2x"></i>
            </a>
            <a href="logout" class="text-white">
                <i class="fa fa-sign-out fa-2x"></i>
            </a>
        </div>
    </div>

    <div class="top-bar top-bar-tabs">
        <div class="qs-tabs">
            <div class="tab wide active" id="seslistdiv">
                {{ses}}
            </div>
            <div class="pull-right text-white">
                <strong class="margin-right-8">{{ username }}</strong>
                <button class="btn btn-sm btn-default flat" ng-click="changeLang()" id="changelang">
                    {{ mylang }}
                </button>
            </div>
        </div>
    </div>

    <div class="scrollable-container blue" >
        <div class="list-group pad-content">
            <a class="list-group-item" ng-repeat="ses in sessions"
               href="{{routes[ses.type]}}?sesid={{ses.id}}">
                <h4 class="list-group-item-heading" ng-bind="ses.name">
                </h4>
                <p class="list-group-item-text" ng-bind="ses.descr"></p>
            </a>
        </div>
    </div>

