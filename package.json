{
  "description": "Core node packages for developing EthicApp project (e.g. linters)",
  "private": true,
  "scripts": {
    "lint-js": "npx eslint './ethicapp-node/**/*.js' './ethicapp-node/bin/www'",
    "lint-html": "npx htmlhint './ethicapp-node/public/**/*.html'",
    "lint-css": "npx stylelint './ethicapp-node/public/css/**/*.css'",
    "lint-sql": "sqlfluff lint './db_config/'"
  },
  "devDependencies": {
    "eslint": "^8.24.0",
    "eslint-plugin-angular": "^4.1.0",
    "htmlhint": "^1.1.4",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0"
  }
}
