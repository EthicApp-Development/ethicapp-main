<div class="form-signin panel panel-default">
    <div class="panel-body">
      <div class="logo">
        <img src="assets/images/logos/ethicapp-logo.png" alt="Logo">
      </div>
      <div class="row">
        <form ng-submit="resetPassword()" class="form-horizontal" method="POST" name="formPasswordReset" novalidate>
          <div class="form-group">
            <label for="username" class="col-sm-3 control-label">{{ "email" | translate }}</label>
            <div class="col-sm-8">
              <p class="form-control-static">{{ user.email }}</p>
            </div>
          </div>
  
          <div class="form-group">
            <label for="password" class="col-sm-3 control-label">{{ "password" | translate }}</label>
            <div class="col-sm-8">
              <input class="form-control" type="password" ng-model="user.newPassword" name="newPassword" id="password" ng-required="true" ng-minlength="8" />
              <div class="error-message" ng-show="formPasswordReset.newPassword.$error.required && formPasswordReset.newPassword.$touched" style="color: red;">
                {{ "password_required" | translate }}
              </div>
              <div class="error-message" ng-show="formPasswordReset.newPassword.$error.minlength && formPasswordReset.newPassword.$touched" style="color: red;">
                {{ "min_length_password" | translate }}
              </div>
            </div>
            <div class="col-sm-1"></div>
          </div>
  
          <div class="form-group">
            <label for="confirmPassword" class="col-sm-3 control-label">{{ "confirm_password" | translate }}</label>
            <div class="col-sm-8">
              <input class="form-control" type="password" ng-model="user.confirmPassword" name="confirmPassword" id="confirmPassword" ng-required="true" ng-minlength="8" />
              <div class="error-message" ng-show="formPasswordReset.confirmPassword.$error.required && formPasswordReset.confirmPassword.$touched" style="color: red;">
                {{ "confirm_password_error" | translate }}
              </div>
              <div class="error-message" ng-show="user.confirmPassword !== user.newPassword && formPasswordReset.confirmPassword.$touched" style="color: red;">
                {{ "passwords_not_match" | translate }}
              </div>
            </div>
            <div class="col-sm-1"></div>
          </div>

          <div class="form-group text-center">
            <div class="g-recaptcha" id="captcha" data-sitekey="{{ reCaptchaSiteKey }}" data-type="image"></div>
            <div class="error-message" ng-show="recaptchaError" style="color: red;">
              {{ recaptchaError }}
            </div>
          </div>

          <div class="form-group text-center">
            <div class="error-message" ng-show="backendError" style="margin-bottom:1em; color: red;">
              {{ backendError }}
            </div>
            <button type="submit" class="btn btn-primary" ng-disabled="formPasswordReset.$invalid" style="margin: 0 auto; width:140px;">
              {{ "reset_password" | translate }}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  