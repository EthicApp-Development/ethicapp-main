<!DOCTYPE html>
<html lang="es" ng-app="Admin">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <title>EthicApp</title>
    <!--<script src="js/ses-ctrl.js"></script>-->
    <link rel="stylesheet" href="//cdn.quilljs.com/1.2.0/quill.snow.css">
    <link rel="stylesheet" href="<%= asset('/assets/css/assets-bundle.css') %>">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/KaTeX/0.9.0-alpha2/katex.min.css">
    <script src="assets/libs/angular.min.js"></script>
    <script src="assets/libs/angular-nvd3.min.js"></script>
    <script type="text/javascript" src="assets/libs/ng-quill.min.js"></script>
    <script src="assets/js/StagesController.js"></script>
    <script src="assets/js/admin-ctrl.js"></script>
    <script src="/socket.io/socket.io.js"></script>>
    <script src="<%= asset('/assets/js/assets-bundle.js') %>"></script>
    
</head>
<body>

    <div ng-controller="AdminController">

        <div class="top-bar-mini cflex">
            <div class="cf1">
                <a href="seslist" class="simple-margin-left">
                    <h3 class="logo-bar app-title">EthicApp</h3>
                </a>
            </div>
            
            <div class="cf1 text-right margin-right-8 simple-padding-top" id="topbtnlist">
                <button class="btn btn-default btn-sm " ng-click="changeLang()">{{'langOther' | lang}}</button>
                <img src="assets/images/assorted/blanco.jpg" alt="No Carga" class="circle_profile cf1 text-right margin-right-8 simple-padding-top" ng-click="selectView('profile')">
                <strong class="margin-right-8"><a ng-click="selectView('profile')" style="color: white;"> {{'profile' | lang}} </a></strong>
                <a href="logout" class="text-white">
                    <i class="fa fa-sign-out fa-2x"></i>
                </a>
            </div>
        </div>

        <div class="inst">
            <div>
            <img src="assets/images/assorted/blanco.jpg" alt="No Carga" class="" style="border: 5px solid #555; max-width: 100px; max-height: 100px;">

               <strong  style="font-size: 25px;">{{ username }}  </strong>
               <h3 ng-if="rol == 'A'">{{'student' | lang}} </h3>
               <h3 ng-if="rol == 'P'">{{'teacher' | lang}} </h3>
               <h3 ng-if="rol == 'I'">{{'institution' | lang}}</h3>
            
            <br><br>
        </div>
            <form action="changepassword" method="post">
            <input  name="mail" type="hidden" value="{{mail}}" class="form-control profile-input">
            <label class="left">{{'change_passwors' | lang}}:</label>
            <input type="text" class="form-control profile-input" name="pass" required autofocus><br>
            <label>{{'confirm_password' | lang}}:</label>
            <input type="text" class="form-control profile-input" name="pass-conf"><br>
            <button type="submit" class="btn btn-primary" style="width: 200px;">
                {{'change_passwors' | lang}}
            </button>

        </form>
        </div>
        <br>
        <div class="inst">
            <form action="deleteacc" method="post">
                {{'terminate_account' | lang}}<br><br>
                <input  name="mail" type="hidden" value="{{mail}}" class="form-control profile-input">
                <button type="submit" class="btn btn-primary" style="width: 200px;">
                    {{'unsubscribe_account' | lang}}
                </button>
            </form>
        </div>

    </div>
</body>
</html>
