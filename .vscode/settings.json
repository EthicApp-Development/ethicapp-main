{
    // Generated Node files and included libraries are set as read-only for the IDE
    "files.readonlyInclude": {
        "/**/node_modules/**": true,
        "/**/package-lock.json": true,
        "ethicapp/frontend/assets/libs/*.js": true,
        "ethicapp/frontend/assets/css/*min.css": true,
        "ethicapp/frontend/assets/css/introjs.css": true,
    },

    // Schema association config file(s)
    "files.associations": {
        ".htmlhintrc": "jsonc",
        ".sqlfluff": "properties",
        ".env": "properties",
        ".sqlfluffignore": "ignore"
    },

    // Indentation for configuration files syntax
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 4
    },

    // JavaScript
    "[javascript]": {
        "editor.rulers": [
            100
        ],
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true, // linting has to be enforced
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,
    "eslint.run": "onType",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html"
    ],

    // HTML
    "[html]": {
        "editor.rulers": [
            100
        ],
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "htmlhint.enable": true,
    "htmlhint.documentSelector": [
        "html",
        "htm"
    ],

    // CSS
    "[css]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint",
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },

    // SQL
    "sqlfluff.linter.run": "onSave",
    "[sql]": {
        "editor.rulers": [
            100
        ],
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true // linting has to be enforced
    },

    // Avoiding project words to be marked as typos by the "Code Spell Chcker" vscode extension
    "cSpell.words": [
        "ethicapp"
    ]
}