# --------------------------------------------------------------------------------------------------
# Development ENV file for docker-compose.
# --------------------------------------------------------------------------------------------------

# Version requirements for underlying services
NODE_VERSION=12.22.9-buster
POSTGRES_VERSION=16
PGADMIN_VERSION=6.14

# Service ports
PGADMIN_PORT=5555
NODE_PORT=5050
NGINX_PORT=8080

# DB credentials for development environment
DB_NAME=ethicapp_dev
DB_USER_NAME=ethicapp
DB_USER_PASSWORD=ethicapp

# DB credentials for testing environment
DB_TEST_NAME=ethicapp_test
DB_TEST_USER_NAME=ethicapp
DB_TEST_USER_PASSWORD=ethicapp

# Path for DB volume mount
HOST_DB_VOLUME_PATH=./db-data-volume

# Domain name for the current EthicApp instance
ETHICAPP_DOMAIN_NAME=localhost

# Current environment type, i.e., 
# "development", "staging", "production"
ETHICAPP_ENV=development

# Origin for CORS
ALLOWED_ORIGINS=http://localhost:3000
